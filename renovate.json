{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "baseBranches": ["STONEBLD-3351-update-renovate-config"],
  "dependencyDashboard": false,
  "prConcurrentLimit": 20,
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^task/.*/recipe\\.yaml$",
        "^task/.*/patch\\.yaml$"
      ],
      "matchStrings": [
        "(?<prefix>image: |tooling-image=)(?:['\"])?(?<depName>.*):(?<currentValue>[^@]*)@(?<currentDigest>sha256:[a-f0-9]{64})(?:['\"])?"
      ],
      "autoReplaceStringTemplate": "{{prefix}}{{depName}}{{#if newValue}}:{{newValue}}{{/if}}{{#if newDigest}}@{{newDigest}}{{/if}}",
      "datasourceTemplate": "docker"
    }
  ]
}
