{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "dependencyDashboard": false,
  "prConcurrentLimit": 20,
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^task/.*/recipe\\.txt$",
        "^task/.*/recipe\\.yaml$",
        "^task/.+/patch\\.yaml$"
      ],
      "matchStrings": [
        "(?<prefix>image: |tooling-image=)(?:['\"])?(?<depName>[0-9a-z.\/-]+)(?::(?<currentValue>[0-9a-z.-]+))?@(?<currentDigest>sha256:[a-f0-9]{64})(?:['\"])?"
      ],
      "autoReplaceStringTemplate": "{{#if (containsString prefix 'image:')}}image: {{else}}{{prefix}}{{/if}}{{depName}}{{#if newValue}}:{{newValue}}{{/if}}{{#if newDigest}}@{{newDigest}}{{/if}}",
      "datasourceTemplate": "docker"
    }
  ]
}
